extends ../layout

block content
  .container
    h1.page-header 회원 목록
    
    table.table.table-striped.table-bordered
      thead
        tr
          th 이름
          th 이메일
          th 가입일시
          th
      tbody
        each user in users
          tr
            td
              a(href='/users/#{user._id}')= user.name
            td= user.email
            td= moment(user.createdAt).format('YYYY-MM-DD HH:mm:ss')
            td
              a.btn.btn-xs.btn-default(href='/users/#{user._id}/edit') 수정
              | 
              a.btn.btn-xs.btn-default(href='/users/#{user._id}?_method=DELETE') 삭제
    a.btn.btn-primary(href='/users/new') 사용자추가
    
    nav.center
      ul.pagination
        li(class=pagination.firstPage.cls): a(href=pagination.firstPage.url)
          span(aria-hidden="true") &laquo;
        li(class=pagination.prevPage.cls): a(href=pagination.prevPage.url)
          span(aria-hidden="true") &lt;
        each page in pagination.pages
          li(class=page.cls)
            a(href=page.url): span= page.text
        li(class=pagination.nextPage.cls): a(href=pagination.nextPage.url)
          span(aria-hidden="true") &gt;
        li(class=pagination.lastPage.cls): a(href=pagination.lastPage.url)
          span(aria-hidden="true") &raquo;
